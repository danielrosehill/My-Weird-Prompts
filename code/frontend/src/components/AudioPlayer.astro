---
interface Props {
	audioUrl: string | null | undefined;
	audioDuration?: number | null;
	title: string;
}

const { audioUrl, audioDuration, title } = Astro.props;

// Format duration from seconds to MM:SS
const formatDuration = (seconds: number | null | undefined) => {
	if (!seconds) return null;
	const mins = Math.floor(seconds / 60);
	const secs = Math.floor(seconds % 60);
	return `${mins}:${secs.toString().padStart(2, '0')}`;
};

const formattedDuration = formatDuration(audioDuration);
---

{audioUrl && (
	<div class="audio-player-container">
		<div class="audio-player-header">
			<h3>üéß Podcast Episode</h3>
			{formattedDuration && <span class="duration">{formattedDuration}</span>}
		</div>

		<audio controls preload="metadata" class="audio-player">
			<source src={audioUrl} type="audio/mpeg" />
			Your browser does not support the audio element.
		</audio>

		<div class="audio-actions">
			<a href={audioUrl} download class="download-button">
				‚¨áÔ∏è Download Episode
			</a>
		</div>
	</div>
)}

