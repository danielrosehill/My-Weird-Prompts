# My Weird Prompts - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI Model API Keys
# =============================================================================

# Anthropic API Key (for Claude Sonnet 4.5 - Phase 2: Response Generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key (for Gemini 2.5 Pro - Phase 1: Transcription & Metadata)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# OpenAI API Key (for TTS generation - Phase 3: Audio Assembly)
# Or alternative TTS provider
OPENAI_API_KEY=your_openai_api_key_here

# Image Generation API Key (Phase 4: Banner Images)
# Options: Stability AI, Replicate, or other image gen service
STABILITY_API_KEY=your_stability_api_key_here
# OR
REPLICATE_API_TOKEN=your_replicate_token_here

# =============================================================================
# Media Storage & CDN
# =============================================================================

# Cloudinary (for hosting audio files and images)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# Webhook & External Integrations
# =============================================================================

# Webhook secret for Voicenotes app authentication
# Generate a random secure string for this
VOICENOTES_WEBHOOK_SECRET=your_secure_random_string_here

# =============================================================================
# Optional: CMS Integration (if using headless CMS)
# =============================================================================

# DatoCMS (if you decide to use it)
# DATOCMS_API_TOKEN=your_datocms_api_token
# DATOCMS_ENVIRONMENT=main

# Contentful (alternative option)
# CONTENTFUL_SPACE_ID=your_contentful_space_id
# CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token
# CONTENTFUL_MANAGEMENT_TOKEN=your_contentful_management_token

# =============================================================================
# Development & Deployment
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Base URL for your deployed site
PUBLIC_SITE_URL=http://localhost:4321

# Vercel deployment (auto-populated by Vercel, but useful for local testing)
# VERCEL_URL=your-project.vercel.app

# =============================================================================
# Optional: Analytics & Monitoring
# =============================================================================

# Google Analytics (if you want tracking)
# PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (for error monitoring)
# SENTRY_DSN=your_sentry_dsn_here
